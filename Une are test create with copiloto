
import tkinter as tk

class InteractiveSquares(tk.Tk):
    def __init__(self):
        super().__init__()
        self.title("Cuadrados Interactivos")
        # Canvas de 210x210 para dejar margen
        self.canvas = tk.Canvas(self, width=210, height=210, bg="grey")
        self.canvas.pack()
        
        # Cuadrado blanco grande
        self.big_square = self.canvas.create_rectangle(
            5, 5, 205, 205, fill="white", outline="black"
        )
        # Cuadrado azul pequeÃ±o (inicial en esquina superior izquierda)
        self.small_square = self.canvas.create_rectangle(
            10, 10, 30, 30, fill="blue", outline="black"
        )
        
        # Variables para drag-and-drop
        self.drag_data = {"x": 0, "y": 0, "item": None}
        
        # Bind mouse events
        self.canvas.tag_bind(self.small_square, "<ButtonPress-1>", self.start_drag)
        self.canvas.tag_bind(self.small_square, "<ButtonRelease-1>", self.stop_drag)
        self.canvas.tag_bind(self.small_square, "<B1-Motion>", self.do_drag)

    def start_drag(self, event):
        self.drag_data["item"] = self.small_square
        self.drag_data["x"] = event.x
        self.drag_data["y"] = event.y

    def stop_drag(self, event):
        self.drag_data["item"] = None
        self.drag_data["x"] = 0
        self.drag_data["y"] = 0

    def do_drag(self, event):
        dx = event.x - self.drag_data["x"]
        dy = event.y - self.drag_data["y"]
        self.canvas.move(self.drag_data["item"], dx, dy)
        self.drag_data["x"] = event.x
        self.drag_data["y"] = event.y

if __name__ == "__main__":
    app = InteractiveSquares()
    app.mainloop()
